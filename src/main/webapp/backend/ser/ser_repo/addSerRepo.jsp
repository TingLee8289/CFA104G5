<body>
	<jsp:include page="/frontend/EZ_header.jsp"></jsp:include>
	<table id="table-1">
		<tr>
			<td>
				<h3>新增檢舉單</h3>
			</td>
			<td>
				<h4>
					<a href="select_page.jsp">回首頁</a>
				</h4>
			</td>
		</tr>
	</table>

	<h3>新增:</h3>

	<%-- 錯誤表列 --%>
	<c:if test="${not empty errorMsgs}">
		<font style="color: red">請修正以下錯誤:</font>
		<ul>
			<c:forEach var="message" items="${errorMsgs}">
				<li style="color: red">${message}</li>
			</c:forEach>
		</ul>
	</c:if>

	<FORM METHOD="post"
		ACTION="<%=request.getContextPath()%>/ser_repo/InsertSerRepoServlet.do"
		name="form1">
		<table>

			<tr>
				<td>訂單編號:</td>

				<td><input type="TEXT" name="rpOrdID" size="45"
					value="<%=(serRepVO == null) ? "" : serRepVO.getRpOrdID()%>" /></td>

			</tr>



			<tr>
				<td>會員編號:</td>
				<td><input type="TEXT" name="rpMemID" size="45"
					value="<%=(serRepVO == null) ? "" : serRepVO.getRpMemID()%>" /></td>
			</tr>


			<tr>
				<td>檢舉內容:</td>
				<td><input type="TEXT" name="rpTxt" size="45"
					value="<%=(serRepVO == null) ? "" : serRepVO.getRpTxt()%>" /></td>
			</tr>

			<tr>
				<td>檢舉時間:</td>
				<td><input id="f_date1" type="text" name="rpDate" size="45"></td>
			</tr>

			<tr>
				<td>檢舉狀態:</td>
				<td><input type="TEXT" name="rpStatus" size="45"
					value="<%=(serRepVO == null) ? "0" : serRepVO.getRpStatus()%>" /></td>
			</tr>



		</table>
		<br> <input type="hidden" name="action" value="insert"> <input
			type="submit" value="送出新增">
	</FORM>
	<jsp:include page="/frontend/EZ_footer.jsp"></jsp:include>
</body>

